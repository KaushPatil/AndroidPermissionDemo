<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.MainActivity">

    <Button
        android:id="@+id/camera_activty_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity Camera"
        android:ems="14"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/audio_activty_button"/>

    <Button
        android:id="@+id/audio_activty_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity Audio"
        android:ems="14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/multiple_permission_activty_button"
        app:layout_constraintTop_toBottomOf="@id/camera_activty_button" />

    <Button
        android:id="@+id/multiple_permission_activty_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity Multiple Permission"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/audio_activty_button" />

</android.support.constraint.ConstraintLayout>